<!DOCTYPE html>
<html>
  <head>
    <title>Jokes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul class='nav nav-pills'>
        <% if user_signed_in? %>
          <%= link_to_nav 'Edit user data', edit_user_registration_path, class: 'nav-link' %>
          <%= link_to_nav 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        <% else %>
          <%= link_to_nav 'Register', new_user_registration_path, class: 'nav-link' %>
          <%= link_to_nav 'Log in', new_user_session_path, class: 'nav-link' %>
        <% end %>
        <%= link_to_nav 'Jokes', jokes_path, class: 'nav-link' %>
        <%= link_to_nav 'New joke', new_joke_path, class: 'nav-link' %>
      </ul>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
